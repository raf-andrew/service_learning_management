{
    "name": "mcp/framework",
    "description": "MCP Framework with Agentic Features",
    "type": "project",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^9.0",
        "guzzlehttp/guzzle": "^7.0",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.15",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "MCP\\": "src/MCP/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
