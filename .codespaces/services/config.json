{
    "version": "1.0.0",
    "services": {
        "mysql": {
            "type": "database",
            "version": "8.0",
            "dependencies": [],
            "configuration": {
                "local": {
                    "host": "localhost",
                    "port": 3306,
                    "database": "service_learning",
                    "username": "root",
                    "password": "root",
                    "charset": "utf8mb4",
                    "collation": "utf8mb4_unicode_ci"
                },
                "codespaces": {
                    "host": "mysql",
                    "port": 3306,
                    "database": "service_learning",
                    "username": "root",
                    "password": "root",
                    "charset": "utf8mb4",
                    "collation": "utf8mb4_unicode_ci"
                }
            },
            "health_check": {
                "type": "mysql",
                "query": "SELECT 1",
                "timeout": 5
            },
            "backup": {
                "enabled": true,
                "schedule": "0 0 * * *",
                "retention": 7
            }
        },
        "redis": {
            "type": "cache",
            "version": "7.0",
            "dependencies": [],
            "configuration": {
                "local": {
                    "host": "localhost",
                    "port": 6379,
                    "database": 0,
                    "password": null,
                    "prefix": "service_learning:"
                },
                "codespaces": {
                    "host": "redis",
                    "port": 6379,
                    "database": 0,
                    "password": null,
                    "prefix": "service_learning:"
                }
            },
            "health_check": {
                "type": "redis",
                "command": "PING",
                "timeout": 5
            },
            "persistence": {
                "enabled": true,
                "type": "aof",
                "sync": "everysec"
            }
        }
    }
} 