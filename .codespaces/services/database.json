{
    "name": "database",
    "type": "mysql",
    "version": "8.0",
    "env": {
        "DB_CONNECTION": "mysql",
        "DB_HOST": "127.0.0.1",
        "DB_PORT": "3306",
        "DB_DATABASE": "service_learning_management",
        "DB_USERNAME": "root",
