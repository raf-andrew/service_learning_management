{
    "environment": {
        "php_version": "8.3.16",
        "required_extensions": [
            "pdo",
            "pdo_mysql",
            "pdo_sqlite",
            "json",
            "mbstring",
            "openssl"
        ]
    },
    "database": {
        "drivers": ["mysql", "sqlite"],
        "required": true
    },
    "coding_standards": {
        "psr4": true,
        "psr12": true,
        "strict_types": true,
        "type_hints": true,
        "return_types": true,
        "docblocks": true
    },
    "testing": {
        "coverage": 100,
        "test_naming": "Test.php",
        "test_directories": [
            "tests/MCP/Unit",
            "tests/MCP/Integration",
            "tests/MCP/Functional"
        ]
    },
    "mcp_framework": {
        "base_namespace": "MCP",
        "component_directories": [
            "Models",
            "Controllers",
            "Presenters",
            "Core"
        ]
    },
    "development_workflow": {
        "pre_commit": [
            "composer test",
            "composer cs-check"
        ],
        "post_commit": [
            "composer test-coverage"
        ]
    }
} 